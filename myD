//command: myD built by Browncoyote DONT DELETE!
// requires: crypto.so, metaxplaoit, and shellpass(in the same folder)

cryptools = include_lib("/lib/crypto.so")
if not cryptools then exit("Error: Missing crypto library")

GetPassword = function(userPass)
    if userPass.len != 2 then return
    password = cryptools.decipher(userPass[1])
    return password
end function

if params.len != 1 or params[0] == "-h" or params[0] == "--help" then exit(command_info("decipher_usage"))

origFile = params[0]
file = get_shell.host_computer.File(origFile)
if file then
    if not file.has_permission("r") then exit("Can't read file. Permission denied")
    if file.get_content.len == 0 then exit("No users found")
    lines = file.get_content.split("\n")
else if origFile.len > 33 then
    lines = [origFile]
else
    exit("Can't find " + origFile)
end if

for line in lines
    userPass = line.split(":")
    password = GetPassword(userPass)
    if not password then print ("It's an Illusion!")
    if password then print(password)
end for
